// This uses github's default image which has tdevtools for python and automatically installs the requirements.txt file post build
{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "name": "Get Started!",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "demo/README.md"
      ]
    },
    "settings": {
      //"markdown.preview.autoShowPreviewToSide": true,
      //"markdown.preview.scrollEditorWithPreview": true,
      "workbench.editor.enablePreview": false,
      "markdown.preview.autoReveal": true,
      "markdown.preview.openMarkdownPreview": "openOnSide"
    }
  }
}